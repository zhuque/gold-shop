.container {
  padding: 60rpx 30rpx 0;
  line-height: 1.6;
}

.title {
  margin-bottom: 30rpx;
  text-align: left;
  width: 100%;
  font-weight: bold;
}

.weui-input {
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  border-bottom: 1px solid #ccc;
  margin-bottom: 50rpx;
}

.btn-box {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.weui-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 30rpx;
}

.my-btn {
  margin-top: 0 !important;
}
